  "scripts": {
    "db:up": "docker-compose up -d --remove-orphans",
    "db:down": "docker-compose down",
    "prisma:init": "npx prisma migrate dev",
    "prisma:migrate": "npx prisma migrate deploy",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/src/app.js",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "npm-run-all test:unit test:integration",
    "test:unit": "dotenv -e .env.test -- npx jest --verbose --coverage",
    "test:integration": " dotenv -e .env.test -- prisma migrate reset --force --skip-seed && npm run test:integration-run",
    "test:integration-run": "dotenv -e .env.test -- npx jest --verbose --coverage --config jest.integration.config.js --runInBand"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^6.0.1",
    "http-errors": "^2.0.0",
    "lodash.groupby": "^4.6.0",
    "morgan": "^1.10.0",
    "picocolors": "^1.0.0",
    "swagger-ui-express": "^4.6.2",
    "yaml": "^2.2.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.0",
    "@types/lodash.groupby": "^4.6.7",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prisma": "^4.11.0",
    "source-map-support": "^0.5.20",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.9.5"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
